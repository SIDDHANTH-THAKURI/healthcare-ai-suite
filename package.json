{
  "name": "healthcare-ai-suite",
  "version": "1.0.0",
  "description": "Healthcare AI Suite - Personalized Drug-Drug Interaction Checker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api-gateway && npm run dev",
    "dev:ml": "cd apps/ml-service && uvicorn server:app --reload --port 8000",
    "dev:ddi": "cd apps/ddi-service && uvicorn server2:app --reload --port 9000",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:ml\" \"npm run dev:ddi\"",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "install:all": "npm install && npm run install:web && npm run install:api",
    "install:web": "cd apps/web && npm install",
    "install:api": "cd apps/api-gateway && npm install",
    "lint": "cd apps/web && npm run lint",
    "maintenance:on": "node scripts/toggle-maintenance.js on",
    "maintenance:off": "node scripts/toggle-maintenance.js off",
    "maintenance:status": "node scripts/toggle-maintenance.js status"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "healthcare",
    "ai",
    "drug-interaction",
    "medical",
    "ddi"
  ],
  "author": "Healthcare AI Team",
  "license": "ISC"
}